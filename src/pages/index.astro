---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const lessons = await getCollection('lessons');

// 1. Agrupar por unidades
const units = lessons.reduce((map, lesson) => {
  const unit = lesson.data.unit ?? 'Unidad general';
  if (!map.has(unit)) map.set(unit, []);
  map.get(unit)?.push(lesson);
  return map;
}, new Map<string, typeof lessons[number][]>());

// 2. Ordenar Unidades (0, 1, 2...)
const sortedUnits = Array.from(units.entries()).sort(([a], [b]) => a.localeCompare(b, 'es', { numeric: true }));

// 3. ORDENAR LECCIONES DENTRO DE CADA UNIDAD (Lógica nueva)
const priority = ['saludos', 'abecedario', 'letras', 'números', 'preguntas', 'cognados'];

sortedUnits.forEach(([unit, unitLessons]) => {
  unitLessons.sort((a, b) => {
    const titleA = a.data.title.toLowerCase();
    const titleB = b.data.title.toLowerCase();
    
    const idxA = priority.findIndex(p => titleA.includes(p));
    const idxB = priority.findIndex(p => titleB.includes(p));
    
    // Si ambos están en la lista de prioridad, usar ese orden
    if (idxA !== -1 && idxB !== -1) return idxA - idxB;
    // Si solo A está, va antes
    if (idxA !== -1) return -1;
    // Si solo B está, va antes
    if (idxB !== -1) return 1;
    
    // Si ninguno está, orden alfabético normal
    return titleA.localeCompare(titleB);
  });
});
---

<Layout title="Panel de lecciones">
  <div class="space-y-8">
    
    {/* Cabecera del Dashboard */}
    <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between border-b border-gray-200 pb-6">
      <div class="space-y-2">
        <p class="text-xs font-bold uppercase tracking-[0.2em] text-brand-green">Visión general</p>
        <h2 class="text-4xl font-extrabold text-brand-dark tracking-tight">Progreso del curso</h2>
        <p class="text-slate-600 max-w-lg">Explora las lecciones generadas automáticamente y sigue tu avance por unidad.</p>
      </div>
      <div class="flex gap-3 text-sm font-medium">
        <span class="flex items-center gap-2 rounded-full bg-brand-blue/10 px-4 py-1.5 text-brand-blue">
          <span class="block h-2 w-2 rounded-full bg-brand-blue"></span>
          {lessons.length} lecciones
        </span>
        <span class="flex items-center gap-2 rounded-full bg-brand-green/10 px-4 py-1.5 text-brand-green">
          <span class="block h-2 w-2 rounded-full bg-brand-green"></span>
          {sortedUnits.length} unidades
        </span>
      </div>
    </div>

    {/* Rejilla de Unidades */}
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {sortedUnits.length === 0 && (
        <div class="col-span-full rounded-xl border-2 border-dashed border-slate-200 bg-slate-50 p-12 text-center">
          <p class="text-slate-500 mb-2">Aún no hay lecciones.</p>
          <p class="text-sm text-slate-400">Ejecuta la automatización en GitHub para generar el contenido inicial.</p>
        </div>
      )}

      {sortedUnits.map(([unit, unitLessons]) => (
        <article class="flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm transition-shadow hover:shadow-md">
          
          {/* Cabecera de la Tarjeta */}
          <header class="border-b border-slate-100 bg-slate-50/50 p-5 flex items-center justify-between">
            <div>
              <p class="text-[10px] font-bold uppercase tracking-wider text-slate-400">Módulo</p>
              <h3 class="text-lg font-bold text-brand-dark">{unit}</h3>
            </div>
            <span class="rounded-full bg-white border border-slate-200 px-2.5 py-0.5 text-xs font-bold text-slate-600">
              {unitLessons.length}
            </span>
          </header>

          {/* Lista de Lecciones */}
          <div class="p-2">
            <ol class="space-y-1">
              {unitLessons.map((lesson, index) => (
                <li>
                  <a href={`${import.meta.env.BASE_URL}/lessons/${lesson.slug}/`} 
                     class="group flex items-start gap-3 rounded-lg p-3 hover:bg-slate-50 transition-colors">
                    <span class="mt-0.5 flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-brand-blue/10 text-[10px] font-bold text-brand-blue group-hover:bg-brand-blue group-hover:text-white transition-colors">
                      {index + 1}
                    </span>
                    <div class="flex flex-col">
                      <span class="text-sm font-semibold text-slate-700 group-hover:text-brand-blue transition-colors">
                        {lesson.data.title}
                      </span>
                    </div>
                  </a>
                </li>
              ))}
            </ol>
          </div>
          
        </article>
      ))}
    </div>
  </div>
</Layout>
