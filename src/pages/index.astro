---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const lessons = await getCollection('lessons');
const units = lessons.reduce((map, lesson) => {
  const unit = lesson.data.unit ?? 'Unidad general';
  if (!map.has(unit)) map.set(unit, []);
  map.get(unit)?.push(lesson);
  return map;
}, new Map<string, typeof lessons[number][]>());

const slugify = (text: string) =>
  text
    .normalize('NFD')
    .replace(/\p{Diacritic}/gu, '')
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/(^-|-$)+/g, '');

const sortedUnits = Array.from(units.entries()).sort(([a], [b]) => {
  if (a === 'Unidad 0') return -1;
  if (b === 'Unidad 0') return 1;
  return a.localeCompare(b, 'es');
});

const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Panel de lecciones">
  <div class="space-y-6">
    <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
      <div class="space-y-1">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-sky-600">Visión general</p>
        <h2 class="text-3xl font-bold text-slate-900">Progreso del curso</h2>
        <p class="text-slate-600">Accede directamente a cada unidad, abre la Unidad 0 y salta a sus secciones clave desde la página de inicio.</p>
      </div>
      <div class="flex flex-wrap gap-2 text-sm text-slate-600 items-center">
        <a href={`${baseUrl}#unidad-0`} class="inline-flex items-center gap-2 rounded-full bg-sky-600 px-3 py-1 font-semibold text-white shadow-sm hover:bg-sky-700 transition-colors">
          Ir a Unidad 0
        </a>
        <span class="rounded-full bg-sky-50 px-3 py-1 font-semibold text-sky-700">{lessons.length} lecciones</span>
        <span class="rounded-full bg-emerald-50 px-3 py-1 font-semibold text-emerald-700">{sortedUnits.length} unidades</span>
      </div>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
      {sortedUnits.length === 0 && (
        <div class="rounded-lg border border-dashed border-slate-200 bg-slate-50 p-6 text-center text-slate-500">
          Aún no hay lecciones. Ejecuta la automatización para generar el contenido inicial.
        </div>
      )}

      {sortedUnits.map(([unit, unitLessons]) => {
        const primaryLesson = unitLessons.find((lesson) => !lesson.data.exercise) ?? unitLessons[0];
        const supportingLessons = unitLessons.filter((lesson) => !lesson.data.exercise && lesson.slug !== primaryLesson?.slug);
        const exercises = unitLessons.filter((lesson) => lesson.data.exercise);
        const unitAnchor = slugify(unit);
        return (
          <article id={unitAnchor} class="flex flex-col gap-4 rounded-xl border border-slate-200 bg-white/90 p-5 shadow-sm ring-1 ring-slate-100">
            <header class="flex items-center justify-between gap-3">
              <div>
                <p class="text-xs font-semibold uppercase tracking-wide text-sky-600">Unidad</p>
                <h3 class="text-xl font-bold text-slate-900">{unit}</h3>
                <p class="text-xs text-slate-500">Menú principal con acceso directo a teoría y prácticas.</p>
              </div>
              <div class="flex flex-col items-end gap-2 text-right">
                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">{unitLessons.length} recursos</span>
                {primaryLesson && (
                  <a class="inline-flex items-center gap-2 rounded-full bg-sky-600 px-3 py-1 text-xs font-semibold text-white shadow hover:bg-sky-700 transition-colors"
                     href={`${baseUrl}lessons/${primaryLesson.slug}/`}>
                    Entrar a la unidad
                  </a>
                )}
              </div>
            </header>

            {unit === 'Unidad 0' && exercises.length > 0 && (
              <div class="rounded-lg border border-sky-100 bg-sky-50 p-3 text-sm text-slate-700">
                <p class="font-semibold text-slate-900 mb-2">Secciones principales de la Unidad 0</p>
                <ul class="space-y-2">
                  {exercises.slice(0, 4).map((lesson) => (
                    <li class="flex items-center justify-between gap-2">
                      <span class="text-slate-700">{lesson.data.title}</span>
                      <div class="flex gap-2 text-xs">
                        <a class="rounded-full bg-white px-3 py-1 font-semibold text-sky-700 border border-sky-200 hover:bg-sky-100 transition-colors"
                           href={`${baseUrl}lessons/${lesson.slug}/`}>
                          Ejercicio directo
                        </a>
                      </div>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <div class="grid gap-4 md:grid-cols-2 text-sm">
              <div class="space-y-2">
                <p class="text-xs font-semibold uppercase tracking-wide text-emerald-600">Lecciones base</p>
                <div class="space-y-2">
                  {primaryLesson && (
                    <a class="block rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 font-semibold text-slate-900 hover:border-sky-200 hover:text-sky-700 transition-colors"
                       href={`${baseUrl}lessons/${primaryLesson.slug}/`}>
                      {primaryLesson.data.title}
                    </a>
                  )}
                  {supportingLessons.map((lesson) => (
                    <a class="block rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-slate-800 hover:border-sky-200 hover:text-sky-700 transition-colors"
                       href={`${baseUrl}lessons/${lesson.slug}/`}>
                      {lesson.data.title}
                    </a>
                  ))}
                  {supportingLessons.length === 0 && <p class="text-slate-500">Sin lecciones adicionales.</p>}
                </div>
              </div>

              <div class="space-y-2">
                <div class="flex items-center justify-between">
                  <p class="text-xs font-semibold uppercase tracking-wide text-brand-green">Prácticas integradas</p>
                  {exercises[0] && (
                    <a class="text-[11px] font-semibold text-sky-700 hover:text-sky-900" href={`${baseUrl}lessons/${exercises[0].slug}/`}>
                      Ir al ejercicio
                    </a>
                  )}
                </div>
                <div class="space-y-2">
                  {exercises.map((lesson) => (
                    <div class="rounded-lg border border-emerald-100 bg-emerald-50 px-3 py-2">
                      <div class="flex items-start justify-between gap-2">
                        <div class="flex flex-col">
                          <span class="font-semibold text-emerald-800">{lesson.data.title}</span>
                          <span class="text-xs text-emerald-700">Ejercicio con retorno a la unidad</span>
                        </div>
                        <a class="text-xs font-semibold text-emerald-700 hover:text-emerald-900" href={`${baseUrl}lessons/${lesson.slug}/`}>
                          Abrir
                        </a>
                      </div>
                    </div>
                  ))}
                  {exercises.length === 0 && <p class="text-slate-500">Prácticas en camino.</p>}
                </div>
              </div>
            </div>
          </article>
        );
      })}
    </div>
  </div>
</Layout>
