---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const lessons = await getCollection('lessons');
const units = lessons.reduce((map, lesson) => {
  const unit = lesson.data.unit ?? 'Unidad general';
  if (!map.has(unit)) map.set(unit, []);
  map.get(unit)?.push(lesson);
  return map;
}, new Map<string, typeof lessons[number][]>());

const sortedUnits = Array.from(units.entries()).sort(([a], [b]) => a.localeCompare(b, 'es'));
---

<Layout title="Panel de lecciones">
  <div class="space-y-6">
    <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
      <div class="space-y-1">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-sky-600">Visión general</p>
        <h2 class="text-3xl font-bold text-slate-900">Progreso del curso</h2>
        <p class="text-slate-600">Explora las lecciones generadas automáticamente y sigue tu avance por unidad.</p>
      </div>
      <div class="flex flex-wrap gap-2 text-sm text-slate-600">
        <span class="rounded-full bg-sky-50 px-3 py-1 font-semibold text-sky-700">{lessons.length} lecciones</span>
        <span class="rounded-full bg-emerald-50 px-3 py-1 font-semibold text-emerald-700">{sortedUnits.length} unidades</span>
      </div>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
      {sortedUnits.length === 0 && (
        <div class="rounded-lg border border-dashed border-slate-200 bg-slate-50 p-6 text-center text-slate-500">
          Aún no hay lecciones. Ejecuta la automatización para generar el contenido inicial.
        </div>
      )}

      {sortedUnits.map(([unit, unitLessons]) => (
        <article class="flex flex-col gap-4 rounded-xl border border-slate-200 bg-white/90 p-5 shadow-sm ring-1 ring-slate-100">
          <header class="flex items-center justify-between">
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-sky-600">Unidad</p>
              <h3 class="text-xl font-bold text-slate-900">{unit}</h3>
            </div>
            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">{unitLessons.length} lecciones</span>
          </header>

          <ol class="space-y-3 text-sm text-slate-700">
            {unitLessons.map((lesson, index) => (
              <li class="flex items-start gap-3 rounded-lg border border-slate-100 bg-slate-50 px-3 py-2">
                <span class="mt-0.5 inline-flex h-6 w-6 items-center justify-center rounded-full bg-sky-100 text-xs font-bold text-sky-700">
                  {index + 1}
                </span>
                <div class="flex flex-1 flex-col">
                  <a class="font-semibold text-slate-900 hover:text-sky-700" href={`/lessons/${lesson.slug}/`}>
                    {lesson.data.title}
                  </a>
                  {lesson.data.unit && <p class="text-xs text-slate-500">{lesson.data.unit}</p>}
                </div>
              </li>
            ))}
          </ol>
        </article>
      ))}
    </div>
  </div>
</Layout>
